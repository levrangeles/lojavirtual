@model LojaVirtual.Domain.Dto.PedidoDTO

@{
    ViewBag.Title = "Pedido";
}

<h2>Pedidos > Cadastro de Pedidos</h2>

@{ if (ViewBag.Mensagem != string.Empty)
    {
        <div class="alert alert-info">
            <strong>
                &nbsp;
                @ViewBag.Message
            </strong>
        </div>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cadastro</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2" for="ClienteId">Cliente</label>
                <div class="col-md-10">
                    <select id="ClienteId" name="ClienteId">
                        @foreach (var item in ViewBag.Clientes)
                        {
                            <option value="@item.Id">@item.Nome</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ProdutoId">Produto</label>
                <div class="col-md-10">
                    <select id="ProdutoId" name="ProdutoId">
                        @foreach (var item in ViewBag.Produtos)
                        {
                            <option value="@item.Id">@item.Nome</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Cancelar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
